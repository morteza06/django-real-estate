FROM python:3.8.13-bullseye

ENV APP_HOME=/app 
RUN mkdir $APP_HOME
RUN mkdir $APP_HOME/staticfiles
WORKDIR $APP_HOME

LABEL maitainer='magahangir2006@gmail.com'
LABEL youtube="https://www.youtube.com/c/gahangir2006"
LABEL description="Development image for Real Estate Project"

ENV PYTHONDONTWRITEBYTECODE 1

ENV PYTHONUNBUFFERED 1

RUN apt-get update \
    && apt-get install -y build_essential \
    && apt-get install -y libpq-dev \
    && apt-get install -y gettext \
    && apt-get install -y netcat gcc postgresql \
    && apt-get purge -y --auto-remove -o  APT::AutoRemove::RecommendsImport=false \
    && rm -rf /var/lib/apt/lists/*

RUN pip3 install --upgrade pip

COPY ./requirements.txt /app/requirements.txt

RUN pip3 install -r requirements.txt

COPY ./docker/local/django/entrypoint /entrypoint
RUN sed -i 's/\r$//g'  /entrypoint
RUN chmod +x /entrypoint

COPY ./docker/local/django/start  /start
RUN sed -i 's/\r$//g'  /start
RUN chmod +x /start

ENTRYPOINT [ "/entrypoint "]